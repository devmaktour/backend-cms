{
  "kind": "collectionType",
  "collectionName": "faqs",
  "info": {
    "singularName": "faq",
    "pluralName": "faqs",
    "displayName": "FAQ",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "question": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "maxLength": 255
    },
    "faqCategory": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::faq-category.faq-category",
      "required": true
    },
    "answer": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "maxLength": 255
    },
    "displayOnHomePage": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
